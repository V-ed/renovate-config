{
	"extends": [
		"config:base",
		":semanticCommits"
	],
	"labels": [
		"dependencies"
	],
	"automergeType": "branch",
	"schedule": [
		"after 1am on Monday",
		"before 7am on Monday"
	],
	"packageRules": [
		{
			"updateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		},
		{
			"depTypeList": [
				"devDependencies"
			],
			"automerge": true
		},
		{
			"matchDepTypes": [
				"dependencies",
				"require"
			],
			"semanticCommitType": "deps",
			"semanticCommitScope": null
		},
		{
			"matchDatasources": [
				"maven"
			],
			"matchDepTypes": [
				"compile",
				"provided",
				"runtime",
				"system",
				"import",
				"parent"
			],
			"semanticCommitType": "deps",
			"semanticCommitScope": null
		},
		{
			"matchPackageNames": [
				"@v-ed/tsconfig"
			],
			"schedule": [
				"at any time"
			],
			"automerge": true
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true,
		"automergeType": "branch"
	}
}