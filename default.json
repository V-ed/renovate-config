{
	"extends": [
		"config:base",
		":semanticCommits",
		":semanticCommitTypeAll(deps)",
		":semanticCommitScope(renovate)"
	],
	"labels": [
		"dependencies"
	],
	"automergeType": "branch",
	"packageRules": [
		{
			"matchPackageNames": ["@types/node"],
			"allowedVersions": "16"
		},
		{
			"updateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		},
		{
			"depTypeList": [
				"devDependencies"
			],
			"automerge": true
		}
	],
	"schedule": [
		"after 1am on Monday",
		"before 7am on Monday"
	]
}