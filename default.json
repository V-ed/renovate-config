{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":semanticCommits"
	],
	"labels": [
		"dependencies"
	],
	"automergeType": "branch",
	"timezone": "Canada/Eastern",
	"schedule": [
		"before 7am on Monday"
	],
	"rangeStrategy": "update-lockfile",
	"packageRules": [
		{
			"updateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		},
		{
			"depTypeList": [
				"devDependencies"
			],
			"automerge": true
		},
		{
			"matchDepTypes": [
				"dependencies",
				"require"
			],
			"semanticCommitType": "deps",
			"semanticCommitScope": null
		},
		{
			"matchDatasources": [
				"maven"
			],
			"matchDepTypes": [
				"compile",
				"provided",
				"runtime",
				"system",
				"import",
				"parent"
			],
			"semanticCommitType": "deps",
			"semanticCommitScope": null
		},
		{
			"matchPackagePatterns": ["^@v-ed.*config"],
			"schedule": [
				"at any time"
			],
			"automerge": true
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true,
		"automergeType": "branch"
	}
}
